# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_style = space
indent_size = 4
max_line_length = 120
# Allow PascalCase for Composable functions
ktlint_function_naming_ignore_when_annotated_with = Composable,Preview

[*.{xml,json}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.gradle]
indent_style = space
indent_size = 4

